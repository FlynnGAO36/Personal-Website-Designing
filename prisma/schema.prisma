datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        String   @id
  title     String
  slug      String   @unique
  excerpt   String
  content   String
  category  String
  published Boolean  @default(false)
  createdAt DateTime @default(now())
}
