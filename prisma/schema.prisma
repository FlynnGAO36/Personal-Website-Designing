generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        String    @id @default(dbgenerated("gen_random_uuid()"))
  title     String
  slug      String    @unique
  excerpt   String
  content   String
  category  String
  published Boolean?  @default(false)
  createdAt DateTime? @default(now()) @db.Timestamptz(6)
}
